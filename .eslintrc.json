{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "mocha": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 2021
    },
    "rules": {
      "no-console": "off",
      "brace-style": ["error", "stroustrup"],
      "semi": ["error", "never"],
      "linebreak-style": ["error", "windows"]
    }
}
